<nav>
    <div class="nav-wrapper light-blue">
        <a href="/" class="brand-logo left">Mixr</a>
        <ul class="right">
            <li><a href="/projects">My Projects</a></li>
            <li><a href="/api/users/logout" type="click">Logout</a></li>
        </ul>
    </div>
</nav>

<section>
    <div class="row">
        <h2 class="white-text center">My Songs</h2>
    </div>
</section>

<section id="projectTest">
    <!--dynamically created songs-->
    {{#each project.songs}}
    <div class="row">
        <div class="card">
            <div class="col s12 m6 l4">
                <div class="card grey lighten-3">
                    <div class="card-content black-text">
                        <span class="card-title title">{{this.title}}</span>
                        <p>{{this.description}} </p>
                        <audio class="audio" controls>
                            <source src={{this.song_url}} type="audio/ogg">
                        </audio>
                    </div>
                    <div class="card-action">
                        <a class="modal-trigger" data-target="delete-modal-{{this.id}}">Delete</a>
                        <div class="modal" id="delete-modal-{{this.id}}">
                            <div class="modal-content">
                                <div class="row">
                                    <div class="input-field col s12">
                                        <p>Are you sure you want to delete this Song?</p>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button class="modal-close waves-effect waves-green btn-flat ">Cancel</button>
                                <button type="submit"
                                    class="modal-close waves-effect waves-green btn-flat delete-song"
                                    id="project-{{this.id}}">Confirm</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}

        <div class="add-btn">
            <a class="btn-floating btn-large waves-effect waves-light red add-btn"
                href="/projects/{{ project.id }}/new-song">
                <i class="material-icons">add</i>
            </a>
        </div>
</section>

<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
