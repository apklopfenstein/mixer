<!-- <h1>{{ title }} </h1> -->

<nav>
    <div class="nav-wrapper light-blue">
        <a href="/" class="brand-logo">Mixr</a>
        <ul class="right hide-on-med-and-down">
            <li><a href="/api/users/logout" type="click">logout</a></li>
        </ul>
    </div>
</nav>

<section>
    <div class="row">
        <h2 class="white-text center">My Projects</h2>
    </div>
</section>

<section>
    <div class="col s1 m1 l1 valign-wrapper btn-wrapper">
        <div class="card grey lighten-3">
            <a data-target="new-project-modal"
                class="btn-floating btn-large waves-effect waves-light red add-btn modal-trigger" id="add-project"><i
                    class="material-icons">add</i></a>
        </div>
    </div>
</section>

<div class="row">
    <ul class="project-list">
        {{#each projects}}
        <li class="col s12 m6 l4">
            <div class="card grey lighten-3">
                <div class="card-content black-text">
                    <span class="card-title">{{ this.name }}</span>
                    
                    <div class="card-action ">
                        <a class="delete-btn left-align" id="project-{{this.id}}">delete</a>
                        <a href="/projects/{{ this.id }}" class="right-align">Details</a>
                    </div>
                    
                </div>
            </div>
        </li>
        {{else}}
        <p>No projects have been created yet.</p>
        {{/each}}
    </ul>
</div>

{{!-- New Project Modal --}}
<div id="new-project-modal" class="modal">
    <form method="POST" action="/api/projects">
        <div class="modal-content">
            <div class="input-field row">
                <input name="name" id="project-name" type="text" class="validate">
                <label for="name">Project Name</label>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="modal-close waves-effect waves-green btn-flat">Create Project</button>
        </div>
    </form>
</div>

<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
<script src="/javascript/projects.js"></script>