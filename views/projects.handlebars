<!--hardcoded project-->
<section id="projectTest">
    <div class="row">
        <div class="card">
            <div class="col s12 m6 l3">
                <div class="card grey lighten-3">
                    <div class="card-content black-text">
                        <span class="card-title">{{song-title}} Project 1</span>
                        <p>{{{song-description}}} </p>
                    </div>

                    <div class="card-action right-align">
                        <a data-target="modal-detail" class="modal-trigger">Details</a>
                    </div>

                    <div id="modal-detail" class="modal modal-detail">
                        <div class="modal-content">
                            <div class="row">
                                <h5>{{{song-title}}}</h5>
                            </div>

                            <div class="row">
                                <div class="col s12 m4 l3">
                                    <div class="card">
                                        <div class="card-image">
                                            <img src="./assets/images/stock-head.jpg">

                                        </div>
                                        <div class="card-content">
                                            <span class="card-title black-text">{{name}}</span>
                                            <p>{{instrument}}</p>
                                        </div>

                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <h5>{{{song-desciption}}}</h5>
                            </div>
                            <div class="row">
                                <h5>{{{comments}}}</h5>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



