<!-- Header -->
<section>
    <div class="row">
        <h2 class="projects center">My Projects</h2>
    </div>
</section>

<!-- Projet List -->
<div class="row row-length">
    {{#each projects}}
    <div class="col s12 m6 l3">
        <div class="card">
            <div class="card-content black-text">
                <span class="card-title">{{ this.name }}</span>
            </div>
            <div class="card-action">
                <a class="modal-trigger" data-target="delete-modal-{{this.id}}">Delete</a>
                <div class="modal" id="delete-modal-{{this.id}}">
                    <div class="modal-content">
                        <div class="row">
                            <div class="input-field col s12">
                                <p class="delete-confirm">Are you sure you want to delete this project?</p>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="modal-close waves-effect waves btn-flat ">Cancel</button>
                        <button type="submit" class="modal-close waves-effect waves btn-flat delete-project"
                            id="project-{{this.id}}">Confirm</button>
                    </div>
                </div>
                <a class="right" href="/projects/{{ this.id }}">Details</a>
            </div>
        </div>
    </div>
    {{else}}
    <p class="no-create center">No projects have been created yet.</p>
    {{/each}}
</div>

<!-- New Project Modal -->
<div id="new-project-modal" class="modal">
    <form name="project-form" method="POST" action="/api/projects">
        <div class="modal-content">
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="Project Name" name="name" id="project-name" type="text" class="validate">
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="modal-close waves-effect waves btn-flat">Create Project</button>
        </div>
    </form>
</div>

<!-- Add Project Button -->
<div class="add-btn">
    <a data-target="new-project-modal" class="btn-floating btn-large waves-effect waves-light add-btn modal-trigger"
        id="add-project"><i class="material-icons">add</i></a>
</div>

