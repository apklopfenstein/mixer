<section>
    <div class="row">
        <h2 class="white-text center">My Projects</h2>
    </div>
</section>

<div class="row">
    {{#each projects}}
    <div class="col s12 m6 l3">
        <div class="card grey lighten-3">
            <div class="card-content black-text">
                <span class="card-title">{{ this.name }}</span>
            </div>
            <div class="card-action">
                <a class="modal-trigger" data-target="delete-modal-{{this.id}}">Delete</a>
                <div class="modal" id="delete-modal-{{this.id}}">
                    <div class="modal-content">
                        <div class="row">
                            <div class="input-field col s12">
                                <p>Are you sure you want to delete this project?</p>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="modal-close waves-effect waves-green btn-flat ">Cancel</button>
                        <button type="submit" class="modal-close waves-effect waves-green btn-flat delete-project"
                            id="project-{{this.id}}">Confirm</button>

                    </div>
                </div>
                <a class="right" href="/projects/{{ this.id }}">Details</a>
            </div>
        </div>
    </div>
    {{else}}
    <h2 class="no-create center">No projects have been created yet.</h2>
    {{/each}}
</div>

{{!-- New Project Modal --}}
<div id="new-project-modal" class="modal">
    <form name="project-form" method="POST" action="/api/projects">
        <div class="modal-content">
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="Project Name" name="name" id="project-name" type="text" class="validate">
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="modal-close waves-effect waves-green btn-flat">Create Project</button>
        </div>
    </form>
</div>

<div class="add-btn">
    <a data-target="new-project-modal" class="btn-floating btn-large waves-effect waves-light red add-btn modal-trigger"
        id="add-project"><i class="material-icons">add</i></a>
</div>

